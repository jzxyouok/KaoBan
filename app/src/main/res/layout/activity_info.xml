<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".InfoActivity">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
       >

        <LinearLayout
            android:id="@+id/artical_info_share_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="horizontal"
            android:background="@drawable/info_button_back"
            >

            <ImageView
                android:id="@+id/artical_info_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/not_share"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:text="分享"
                android:layout_gravity="center_vertical"
                android:textColor="#A4B5B6" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/artical_info_pinglun_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/info_button_back">

            <ImageView
                android:id="@+id/artical_info_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/not_pinglun" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="#A4B5B6" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/artical_info_store_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/info_button_back">

            <ImageView
                android:id="@+id/artical_info_store"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/not_store" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="#A4B5B6" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/artical_info_like_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/info_button_back">

            <ImageView
                android:id="@+id/artical_info_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/not_like"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="赞"
                android:textColor="#A4B5B6"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/artical_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        ></ListView>

</RelativeLayout>