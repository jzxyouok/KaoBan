<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.dezhou.lsy.projectdezhoureal.ForgetPasswordActivity">
<include layout="@layout/backxml"></include>
    <TextView
        android:id="@+id/forgetpassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/forget_first_title"
        android:textColor="@color/light_gray"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/forgetpassword_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@id/forgetpassword_text"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_back"
        android:hint="请输入11位手机号"
        android:textColorHint="@color/light_gray"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:numeric="integer"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/forgetpassword_step"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_unpress"
        android:clickable="false"
        android:layout_alignTop="@id/forgetpassword_phone"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:text="下一步"/>
</RelativeLayout>
