<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">
    <LinearLayout
        android:id="@+id/common_constact"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <Button
            android:id="@+id/button_exam_exam"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/top_button_background_press_left"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:text="我的考试"/>
        <Button
            android:id="@+id/button_exam_similar"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/top_button_background_right"
            android:textColor="@color/whites"
            android:textSize="15sp"
            android:text="相似的人"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/button_exam_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/mes_add"/>
    <TextView
        android:id="@+id/select_similar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textColor="@color/whites"
        android:textSize="15sp"/>
</RelativeLayout>
