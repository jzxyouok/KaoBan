<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#FAF9F9">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/head_back"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whites"
            android:text="用户注册"
            android:textSize="15sp"

            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了防止用户信息被盗用，请使用本机号码注册"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_gray"
            android:id="@+id/text" />


        <LinearLayout
            android:id="@+id/et_password"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="horizontal" >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_login_code"/>
            <EditText
                android:id="@+id/et_register_password"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="输入密码"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:background="@null"

                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ettwo_password"
            android:layout_below="@id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_login_code"/>
            <EditText
                android:id="@+id/password_confirm_register"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="再次输入密码"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:background="@null"

                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ettwo_password"
            android:layout_marginTop="80dp"
            android:text="注册"
            android:textColor="#FEFEFF"
            android:background="@drawable/login_btn"/>

    </RelativeLayout>


</LinearLayout>
