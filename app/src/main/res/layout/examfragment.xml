<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2" >

            <view.ExamTextView
                android:id="@+id/text_second_headimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/whites"
                android:textSize="10sp"
                android:background="@drawable/addexam_headimg"
                android:gravity="center"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/textview_second_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:layout_weight="4"
            android:textSize="12dp"
            android:paddingRight="5dp"
            android:textColor="@color/selfmes_text"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报名时间 "
                    android:textSize="11sp"
                    android:textColor="@color/transparent_grey"/>
                <TextView
                    android:id="@+id/textview_rtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015/08/18"
                    android:textSize="11sp"
                    android:textColor="@color/transparent_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考试时间 "
                    android:textSize="11sp"
                    android:textColor="@color/transparent_grey"/>
                <TextView
                    android:id="@+id/textview_etime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015/08/18"
                    android:textSize="11sp"
                    android:textColor="@color/transparent_grey"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:src="@drawable/smallline"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/linear_down1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_down1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_down1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/background_material_dark"
                android:ellipsize="middle"
                android:gravity="center"
                android:textSize="10sp"
                android:text="考试介绍"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_down2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_down2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_down2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/background_material_dark"
                android:ellipsize="middle"
                android:textSize="10sp"
                android:gravity="center"
                android:text="打印时间入口"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_down3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_down3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_down3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="报名流程"
                android:textSize="10sp"
                android:ellipsize="middle"
                android:gravity="center"
                android:textColor="@color/background_material_dark"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_down4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_down4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_down4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/background_material_dark"
                android:ellipsize="middle"
                android:textSize="10sp"
                android:gravity="center"
                android:text="查分入口"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_down5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_down5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_down5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/background_material_dark"
                android:ellipsize="middle"
                android:gravity="center"
                android:textSize="10sp"
                android:text="合格标准"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>