<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.dezhou.lsy.projectdezhoureal.InputYanzhengActivity">

    <include layout="@layout/backxml"></include>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/input_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="15sp"
        />
    <LinearLayout
        android:id="@+id/password_forget_second_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignTop="@id/input_activity_title"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edittext_normal">
        <EditText
            android:id="@+id/activity_input_yanzheng_num"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:paddingLeft="10dp"

            android:background="@drawable/bg_edittext_normal"
            android:numeric="integer"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/gray"
            />

        <Button
            android:id="@+id/forgetpassword_get_yanzheng"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="重新获取"
            android:textColor="#FF5A00"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/activity_input_yanzheng_step"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_unpress"
        android:clickable="false"
        android:text="下一步"
        android:textColor="@color/white"
        android:layout_alignTop="@id/password_forget_second_layout"
        android:layout_marginTop="60dp"/>
</LinearLayout>
