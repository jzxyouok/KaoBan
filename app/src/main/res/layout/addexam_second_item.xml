<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <me.grantland.widget.AutofitTextView
        android:id="@+id/img_second_headimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/whites"
        android:textSize="8sp"
        autofit:minTextSize="5sp"
        android:singleLine="true"
        android:background="@drawable/addexam_headimg"
        android:gravity="center"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/textview_second_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_weight="4"
        autofit:minTextSize="8sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/dark"
       />

    <ImageView
        android:id="@+id/img_second_add"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:src="@drawable/type_select_btn_nor"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:background="@color/devide_line" />
</LinearLayout>
